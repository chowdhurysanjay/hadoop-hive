#Creating import jobs in sqoop

sqoop job --create myjob -- import --connect "jdbc:mysql://localhost:3306/demo" --username root --table employee_info --target-dir /user/hdfs/sqoop_data --driver com.mysql.jdbc.Driver

#Creating export job in sqoop

sqoop job --create myExportJob -- export --connect jdbc:mysql://localhost:3306/demo1 --username root --table hiveExportedTbl --export-dir /apps/hive/warehouse/demotbl --driver com.mysql.jdbc.Driver


#Run a job in sqoop

sqoop job --exec <job_name>
	-- It will ask for password to run the job, which will the be the RDBMS user's password. Enter the RDBMS user's password to execute the job. If you are using mysql as RDBMS system and facing an issue like - ERROR manager.SqlManager: Error executing statement: java.sql.SQLException: Access denied for user 'root'@'localhost' (using password: YES), then create a password for the user's you have given in the sqoop command using the following:

										mysqladmin -u <your_username> -h localhost password '<your_password>' 



#Sqoop codegen command to generate the DAO class

sqoop codegen --connect jdbc:mysql://localhost:3306/demo1 --username root --password hadoop --table exportTbl --driver com.mysql.jdbc.Driver


#Sqoop eval command

sqoop eval --connect jdbc:mysql://localhost:3306/demo --username root --password hadoop --query "SELECT * FROM employee_info"


#Sqoop list databases

sqoop list-databases --connect jdbc:mysql://localhost:3306/ --username root --password hadoop


#Sqoop list tables

sqoop list-tables --connect jdbc:mysql://localhost:3306/demo --username root --password hadoop